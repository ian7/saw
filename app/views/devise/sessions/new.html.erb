<div id="sign-in-up">
  <ul class="tabs">
    <li class="sign-in"><a href="#sign-in">Log in</a></li>
    <li class="sign-up"><a href="#sign-up">Create an account</a></li>
    </ul> 
  <div id="sign-in">

    <form accept-charset="UTF-8" action="/users/sign_in" class="user_new" id="user_new" method="post">

        <div style="margin:0;padding:0;display:inline">
        <input name="utf8" type="hidden" value="&#x2713;" />
        <input name="authenticity_token" type="hidden" value="oikWBo1aXitpLRffeZWZGT24UjfgBxeqFOIDoijDXvE=" />
        </div> 
        
      <p><strong>You can use username and password: </strong><br/><br/>
      User: <input id="user_email" name="user[email]" size="30" type="text" />
      Password:<input type="password" id="user_password" name="user[password]" size="30" value="" />
     
    <!--  <input id="user_password_confirmation" name="user[password_confirmation]" size="30" type="hidden" value='m'/>-->
      <input id="user_submit" name="commit" type="submit" value="Sign in" /></p> 
    </form> 
