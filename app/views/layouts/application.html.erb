-->

<!-- there we go with theh ribbon -->
<%= render :partial => "layouts/ribbon", :object=>@issues %>

 <div class="tab" id="tab1" onmouseover="this.style.cursor='pointer';" 
    onmouseup="window.location='<%= url_for :controller=>"wizards", :action=>"explore" %>'">Explore</div>
 <div class="tab" id="tab2" onmouseover="this.style.cursor='pointer';"
    onmouseup="window.location='<%= url_for :controller=>"wizards", :action=>"capture" %>'">Capture</div>
 <div class="tab" id="tab3" onmouseover="this.style.cursor='pointer';" 
    onmouseup="window.location='<%= url_for :controller=>"wizards", :action=>"decide" %>'">Decide</div>
 <div class="tab" id="tab4" onmouseover="this.style.cursor='pointer';"
    onmouseup="window.location='<%= url_for :controller=>"wizards", :action=>"report" %>'">Report</div>


<div class="wrapper">
  
 <div id="center"> 

<div class="overlay" id="overlay"> 
 
    <!-- the external content is loaded inside this tag --> 
    <div class="contentWrap"></div> 
 
</div>

<%= yield %>

